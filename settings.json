{
    "*.md": {
        "tabsize": 2
    },
    "*.py": {
        "tabsize": 4
    },
    "*.rs": {
        "tabsize": 4
    },
    "*.xsh": {
        "filetype": "python"
    },
    "autoclose": false,
    "colorcolumn": 3,
    "colorscheme": "hbuke256",
    "diffgutter": true,
    "eofnewline": false,
    "hlsearch": true,
    "linter": false,
    "parsecursor": true,
    "savecursor": true,
    "saveundo": true,
    "scrollbar": true,
    "softwrap": true,
    "tabsize": 2,
    "tabstospaces": true,
    "wordwrap": true
}
